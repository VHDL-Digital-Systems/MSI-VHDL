library ieee;
use ieee.std_logic_1164.all;
use ieee.std_logic_unsigned.all;

entity cnt is
	generic ( n: integer :=4);
	port(Clk,resetn,en: in std_logic;
				  q: buffer std_logic_vector(n-1 downto 0));
end cnt;

architecture comportamiento of cnt is
--signal count: std_logic_vector
begin
	process(resetn,clk)
		begin
			if resetn='0' then
				q<=(others => '0');
			elsif clk'event and clk='1' then
				if en='1' then q<=q+1;
				end if;
			end if;
	end process;
end comportamiento;

